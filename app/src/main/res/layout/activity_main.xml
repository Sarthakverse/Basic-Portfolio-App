<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/MAIN_PORTFOLIO_ID"
        android:layout_width="411dp"
        android:layout_height="189dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/portff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MAIN_NAME_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:fontFamily="serif-monospace"
        android:text="Your Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MAIN_PORTFOLIO_ID" />

    <TextView
        android:id="@+id/MAIN_POSITION_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position"
        android:textColor="#E91E63"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="@id/MAIN_NAME_ID"
        android:textStyle="bold|italic"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/MAIN_NAME_ID"/>

    <TextView
        android:id="@+id/MAIN_EDUCATION_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/MAIN_POSITION_ID"
        android:text="Education"
        app:layout_constraintTop_toBottomOf="@+id/MAIN_POSITION_ID"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"/>

    <TextView
        android:id="@+id/MAIN_UNIVERSITY_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#E91E63"
        android:text="College Name"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@+id/MAIN_EDUCATION_ID"
        app:layout_constraintStart_toStartOf="@+id/MAIN_EDUCATION_ID"/>


    <TextView
        android:id="@+id/MAIN_DEGREE_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Degree"
        android:textStyle="bold|italic"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/MAIN_UNIVERSITY_ID"
        app:layout_constraintStart_toStartOf="@+id/MAIN_UNIVERSITY_ID"
        android:textColor="#3F51B5"/>


    <TextView
        android:id="@+id/MAIN_YEAR_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Year"
        android:textColor="#3F51B5"
        android:layout_marginEnd="30dp"
        android:fontFamily="serif-monospace"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold|italic"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/MAIN_DEGREE_ID"
        app:layout_constraintTop_toBottomOf="@+id/MAIN_UNIVERSITY_ID" />

    <TextView
        android:id="@+id/MAIN_COURSE_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/MAIN_DEGREE_ID"
        android:text="Courses"
        app:layout_constraintTop_toBottomOf="@+id/MAIN_DEGREE_ID"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"/>


    <TextView
        android:id="@+id/MAIN_ORGANISTAION_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="serif-monospace"
        android:text="Organisation"
        android:textColor="#E91E63"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="@+id/MAIN_COURSE_ID"
        app:layout_constraintTop_toBottomOf="@+id/MAIN_COURSE_ID" />

    <TextView
        android:id="@+id/MAIN_COURSE_NAME_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="serif-monospace"
        android:text="Course name"
        android:textColor="#1E39E9"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="@+id/MAIN_ORGANISTAION_ID"
        app:layout_constraintTop_toBottomOf="@+id/MAIN_ORGANISTAION_ID" />

    <TextView
        android:id="@+id/MAIN_COURSE_YEAR_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Year"
        android:textColor="#3F51B5"
        android:layout_marginEnd="30dp"
        android:fontFamily="serif-monospace"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold|italic"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/MAIN_COURSE_NAME_ID"
        app:layout_constraintTop_toBottomOf="@+id/MAIN_ORGANISTAION_ID" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/MAIN_ADD_BUTTON_ID"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:foregroundGravity="bottom|right"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:drawableTint="#FFEB3B"/>


    <Button
        android:id="@+id/MAIN_GITHUB_BUTTON_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:fontFamily="serif"
        android:onClick="openGithub"
        android:text="Open Github"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MAIN_YEAR_ID" />


</androidx.constraintlayout.widget.ConstraintLayout>